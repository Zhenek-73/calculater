from model import *
from viev import *
def main():
    while True:
        print(num())
        choice = display_menu()
        if choice == "1":
            num_1, num_2 = num()
            p(num_1, num_2, ans)
            print(ans(result))
        elif choice == "2":
            num_1, num_2 = num()
            m(num_1, num_2, ans)
            print(ans(result))
        elif choice == "3":
            num_1, num_2 = num()
            y(num_1, num_2, ans)
            print(ans(result))
        elif choice == "4":
            num_1, num_2 = num()
            r(num_1, num_2, ans)
            print(ans(result))
        elif choice == "0":
            print("Пока!")
            break
        else:
            mes("Неверный выбор, попробуй снова")
def calculate_rectangle_area(length, width):
    if length < 0 or width < 0:
        raise ValueError("Длина и ширина не могут быть отрицательными.")
    return length * width

def calculate_triangle_area(base, height):
    if base < 0 or height < 0:
        raise ValueError("Основание и высота не могут быть отрицательными.")
    return 0.5 * base * height

main()
